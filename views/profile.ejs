<%- include("partials/header.ejs") -%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= currentUser.username %>'s Profile | CrowdFund</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --success-color: #4cc9f0;
            --warning-color: #f8961e;
            --danger-color: #f72585;
            --dark-color: #212529;
        }
        body {
            background-color: #f8f9fa;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }
        .profile-header {
            background: white;
            border-radius: 16px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
            padding: 2rem;
            margin-bottom: 2rem;
        }
        .profile-img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid white;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        .profile-img:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }
        .stat-card {
            border-radius: 12px;
            padding: 1rem;
            text-align: center;
            transition: all 0.3s ease;
            background: white;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
            border: none;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }
        .stat-value {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.25rem;
        }
        .stat-label {
            font-size: 0.9rem;
            color: #6c757d;
        }
        .section-title {
            position: relative;
            padding-bottom: 0.75rem;
            margin-bottom: 1.5rem;
        }
        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--success-color));
            border-radius: 3px;
        }
        .portfolio-card, .campaign-card, .investment-card {
            border-radius: 12px;
            transition: all 0.3s ease;
            background: white;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
            border: none;
            height: 100%;
            overflow: hidden;
        }
        .portfolio-card:hover, .campaign-card:hover, .investment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        }
        .token-badge {
            font-size: 0.8rem;
            padding: 0.4em 0.8em;
            font-weight: 600;
            border-radius: 50px;
        }
        .profit-badge { background-color: var(--success-color); color: #000; }
        .ownership-badge { background-color: var(--primary-color); color: #fff; }
        .rewards-badge { background-color: var(--warning-color); color: #000; }
        .hybrid-badge { background-color: #198754; color: #fff; }
        .token-value {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--primary-color);
        }
        .token-details {
            border-left: 3px solid #eee;
            padding-left: 1rem;
            margin: 1rem 0;
        }
        .token-detail-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }
        .token-detail-icon {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            background-color: rgba(67, 97, 238, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 0.75rem;
            color: var(--primary-color);
        }
        .progress {
            height: 10px;
            border-radius: 10px;
            background-color: #e9ecef;
        }
        .progress-bar {
            background: linear-gradient(90deg, var(--primary-color), var(--success-color));
            border-radius: 10px;
        }
        .campaign-status {
            position: absolute;
            top: 15px;
            right: 15px;
            z-index: 1;
            font-size: 0.75rem;
            padding: 0.35em 0.65em;
            border-radius: 50px;
        }
        .empty-state {
            padding: 3rem 1rem;
            text-align: center;
            background: white;
            border-radius: 12px;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
        }
        .empty-state-icon {
            font-size: 3rem;
            color: #adb5bd;
            margin-bottom: 1rem;
        }
        .btn-edit-profile {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            transition: all 0.3s ease;
        }
        .btn-edit-profile:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
            color: white;
        }
        .investment-hash {
            font-family: monospace;
            font-size: 0.85rem;
            color: #6c757d;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .investment-amount {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--primary-color);
        }
        .investment-tokens {
            font-weight: 600;
            color: var(--dark-color);
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    <img src="<%= currentUser.profilePicture || '/default-avatar.png' %>" 
                         alt="<%= currentUser.username %>" 
                         class="profile-img mb-3">
                         <button class="btn btn-edit-profile mt-2" onclick="showUpdateProfileModal()">
                            <i class="bi bi-pencil me-1"></i> Edit Profile
                        </button>
                </div>
                <div class="col-md-9">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h1 class="mb-1"><%= currentUser.username %></h1>
                            <p class="text-muted mb-3"><%= currentUser.bio || 'No bio yet' %></p>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-success me-2">
                                <i class="bi bi-patch-check-fill me-1"></i> Verified
                            </span>
                            <span class="badge bg-light text-dark">
                                Member since <%= new Date(currentUser.dateCreated).getFullYear() %>
                            </span>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-4 mb-3">
                            <div class="stat-card">
                                <div class="stat-value"><%= campaigns.length %></div>
                                <div class="stat-label">Campaigns</div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="stat-card">
                                <div class="stat-value"><%= investments.length %></div>
                                <div class="stat-label">Investments</div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="stat-card">
                                <div class="stat-value"><%= userTokens.reduce((sum, token) => sum + token.amount, 0).toLocaleString() %></div>
                                <div class="stat-label">Total Tokens</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tokens Section -->
        <div class="mb-5">
            <h3 class="section-title">
                <i class="bi bi-wallet2 me-2"></i>Token Portfolio
                <span class="badge bg-primary rounded-pill ms-2"><%= userTokens.length %></span>
            </h3>
            
            <div class="row">
                <% if (userTokens && userTokens.length > 0) { %>
                    <% userTokens.forEach(token => { %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="portfolio-card p-3">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="card-title mb-0"><%= token.campaignTitle %></h5>
                                    <span class="badge <%= 
                                        token.tokenType === 'profit' ? 'profit-badge' : 
                                        token.tokenType === 'ownership' ? 'ownership-badge' :
                                        token.tokenType === 'rewards' ? 'rewards-badge' : 'hybrid-badge'
                                    %>">
                                        <%= token.tokenName %>
                                    </span>
                                </div>
                                
                                <div class="token-value mb-2">
                                    $<%= (token.amount * (token.valuePerToken ?? 0)).toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                </div>
                                
                                <div class="d-flex justify-content-between small text-muted mb-3">
                                    <span><i class="bi bi-coin me-1"></i> <%= token.amount.toLocaleString() %> tokens</span>
                                    <span><i class="bi bi-cash-coin me-1"></i> $<%= (token.valuePerToken ?? 0).toFixed(2) %> each</span>
                                </div>
                                
                                <div class="token-details">
                                    <% if(token.tokenType === 'profit') { %>
                                        <div class="token-detail-item">
                                            <div class="token-detail-icon">
                                                <i class="bi bi-percent"></i>
                                            </div>
                                            <div>
                                                <strong>Profit share:</strong> <%= token.profitSharePercentage %>%
                                                <small class="text-muted d-block">Paid <%= token.profitDistributionFrequency %></small>
                                            </div>
                                        </div>
                                    <% } else if(token.tokenType === 'ownership') { %>
                                        <div class="token-detail-item">
                                            <div class="token-detail-icon">
                                                <i class="bi bi-pie-chart"></i>
                                            </div>
                                            <div>
                                                <strong>Ownership:</strong> <%= token.ownershipPercentage %>%
                                                <small class="text-muted d-block">Voting: <%= token.votingRights ? 'Yes' : 'No' %></small>
                                            </div>
                                        </div>
                                    <% } else if(token.tokenType === 'rewards') { %>
                                        <div class="token-detail-item">
                                            <div class="token-detail-icon">
                                                <i class="bi bi-gift"></i>
                                            </div>
                                            <div>
                                                <strong>Rewards:</strong> <%= token.rewardDescription.substring(0, 40) %><%= token.rewardDescription.length > 40 ? '...' : '' %>
                                            </div>
                                        </div>
                                    <% } else if(token.tokenType === 'hybrid') { %>
                                        <div class="token-detail-item">
                                            <div class="token-detail-icon">
                                                <i class="bi bi-pie-chart"></i>
                                            </div>
                                            <div>
                                                <strong>Ownership:</strong> <%= token.ownershipPerToken %>% per token
                                            </div>
                                        </div>
                                        <div class="token-detail-item">
                                            <div class="token-detail-icon">
                                                <i class="bi bi-gift"></i>
                                            </div>
                                            <div>
                                                <strong>Rewards:</strong> <%= token.rewardDescription.substring(0, 30) %><%= token.rewardDescription.length > 30 ? '...' : '' %>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <a href="/campaigns/<%= token.campaignId %>" class="btn btn-outline-primary w-100 mt-2">
                                    <i class="bi bi-eye me-1"></i> View Campaign
                                </a>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="bi bi-wallet2"></i>
                            </div>
                            <h4 class="mb-3">No tokens yet</h4>
                            <p class="text-muted mb-4">Invest in campaigns to start building your token portfolio</p>
                            <a href="/campaigns" class="btn btn-primary">
                                <i class="bi bi-currency-dollar me-1"></i> Browse Campaigns
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Created Campaigns -->
        <div class="mb-5">
            <h3 class="section-title">
                <i class="bi bi-rocket me-2"></i>Your Campaigns
                <span class="badge bg-primary rounded-pill ms-2"><%= campaigns.length %></span>
            </h3>
            
            <div class="row">
                <% if (campaigns && campaigns.length > 0) { %>
                    <% campaigns.forEach(campaign => { %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="campaign-card p-3">
                                <div class="position-relative">
                                    <h5 class="card-title mb-1"><%= campaign.title %></h5>
                                    <span class="campaign-status badge bg-<%= 
                                        campaign.status === 'active' ? 'success' : 
                                        campaign.status === 'funded' ? 'primary' : 'secondary'
                                    %>">
                                        <%= campaign.status.toUpperCase() %>
                                    </span>
                                </div>
                                
                                <p class="text-muted small mb-3">
                                    <i class="bi bi-calendar me-1"></i> Created: <%= new Date(campaign.timeCreated).toLocaleDateString() %>
                                </p>
                                
                                <div class="progress mb-2">
                                    <div class="progress-bar" role="progressbar" 
                                         style="width: <%= Math.min((campaign.amountRaised / campaign.goalAmount) * 100, 100) %>%" 
                                         aria-valuenow="<%= (campaign.amountRaised / campaign.goalAmount) * 100 %>">
                                    </div>
                                </div>
                                
                                <div class="d-flex justify-content-between small text-muted mb-3">
                                    <span><i class="bi bi-cash-stack me-1"></i> $<%= campaign.amountRaised.toLocaleString() %></span>
                                    <span><i class="bi bi-bullseye me-1"></i> $<%= campaign.goalAmount.toLocaleString() %></span>
                                </div>
                                
                                <div class="d-flex justify-content-between small mb-3">
                                    <span><i class="bi bi-people me-1"></i> <%= campaign.investors.length %> investors</span>
                                    <span><i class="bi bi-coin me-1"></i> <%= campaign.tokenSymbol %></span>
                                </div>
                                
                                <div class="d-grid">
                                    <a href="/campaigns/<%= campaign._id %>" class="btn btn-outline-primary">
                                        <i class="bi bi-gear me-1"></i> Manage Campaign
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="bi bi-rocket"></i>
                            </div>
                            <h4 class="mb-3">No campaigns created yet</h4>
                            <p class="text-muted mb-4">Launch your first campaign to start raising funds</p>
                            <a href="/campaigns/new" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i> Create Campaign
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Investments Section -->
<div class="mb-4">
    <h3 class="section-title">
        <i class="bi bi-graph-up me-2"></i>Your Investments
        <span class="badge bg-primary rounded-pill ms-2"><%= investments.length %></span>
    </h3>
    
    <div class="row">
        <% if (investments && investments.length > 0) { %>
            <% investments.forEach(investment => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="investment-card p-3">
                        <h5 class="card-title mb-2">
                            <%= investment.campaign.title %>
                            <% if (!investment.campaign._id) { %>
                                <span class="badge bg-warning text-dark ms-2">Campaign Deleted</span>
                            <% } %>
                        </h5>
                        <p class="text-muted small mb-3">
                            <i class="bi bi-calendar me-1"></i> <%= new Date(investment.timeCreated).toLocaleDateString() %>
                        </p>
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <div class="investment-amount">$<%= investment.amount.toLocaleString() %></div>
                                <small class="text-muted">Investment</small>
                            </div>
                            <div class="text-end">
                                <div class="investment-tokens">
                                    <%= investment.tokens.toLocaleString() %> <%= investment.tokenDetails.symbol %>
                                </div>
                                <small class="text-muted">Tokens received</small>
                            </div>
                        </div>
                        
                        <div class="small mb-3">
                            <div>
                                <i class="bi bi-coin me-1"></i> $<%= (investment.tokenDetails.value || 0).toFixed(2) %> per token
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <% if (investment.campaign._id) { %>
                                <a href="/campaigns/<%= investment.campaign._id %>" class="btn btn-outline-primary">
                                    <i class="bi bi-eye me-1"></i> View Campaign
                                </a>
                            <% } else { %>
                                <button class="btn btn-outline-secondary" disabled>
                                    <i class="bi bi-eye-slash me-1"></i> Campaign Unavailable
                                </button>
                            <% } %>
                            <% if (investment.transactionHash) { %>
                                <a href="/<%= investment.transactionHash %>/blockchain" 
                                   target="_blank"
                                   class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-blockchain me-1"></i> View Transaction
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <!-- Empty state remains the same -->
        <% } %>
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>


<!-- Update Profile Modal -->
<div class="modal fade" id="updateProfileModal" tabindex="-1" aria-labelledby="updateProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateProfileModalLabel">Update Your Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/profile/update" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="mb-3">
                                <img id="profilePicturePreview" 
                                     src="<%= currentUser.profilePicture || '/default-avatar.png' %>" 
                                     alt="Profile Preview" 
                                     class="profile-img mb-2">
                                <input type="file" class="form-control" id="profilePicture" name="profilePicture" accept="image/*">
                                <small class="text-muted">Max 2MB (JPG, PNG)</small>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="username" class="form-label">Username*</label>
                                    <input type="text" class="form-control" id="username" name="username" 
                                           value="<%= currentUser.username %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="surname" class="form-label">Surname</label>
                                    <input type="text" class="form-control" id="surname" name="surname" 
                                           value="<%= currentUser.surname || '' %>">
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="email" class="form-label">Email*</label>
                                    <input type="email" class="form-control" id="email" name="email" 
                                           value="<%= currentUser.email %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="phone" class="form-label">Phone</label>
                                    <input type="tel" class="form-control" id="phone" name="phone" 
                                           value="<%= currentUser.phone || '' %>">
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" id="address" name="address" 
                                       value="<%= currentUser.address || '' %>">
                            </div>
                            
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="age" class="form-label">Age</label>
                                    <input type="number" class="form-control" id="age" name="age" 
                                           value="<%= currentUser.age || '' %>" min="18" max="120">
                                </div>
                                <div class="col-md-8 mb-3">
                                    <label class="form-label">Gender</label>
                                    <div class="d-flex gap-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender" id="male" 
                                                   value="male" <%= currentUser.gender === 'male' ? 'checked' : '' %>>
                                            <label class="form-check-label" for="male">Male</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender" id="female" 
                                                   value="female" <%= currentUser.gender === 'female' ? 'checked' : '' %>>
                                            <label class="form-check-label" for="female">Female</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender" id="other" 
                                                   value="other" <%= currentUser.gender === 'other' ? 'checked' : '' %>>
                                            <label class="form-check-label" for="other">Other</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender" id="preferNotToSay" 
                                                   value="preferNotToSay" <%= currentUser.gender === 'preferNotToSay' ? 'checked' : '' %>>
                                            <label class="form-check-label" for="preferNotToSay">Prefer not to say</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="bio" class="form-label">Bio</label>
                                <textarea class="form-control" id="bio" name="bio" rows="3"><%= currentUser.bio || '' %></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Profile picture preview functionality
    document.getElementById('profilePicture').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(event) {
                document.getElementById('profilePicturePreview').src = event.target.result;
            };
            reader.readAsDataURL(file);
        }
    });

    // Function to show the modal
    function showUpdateProfileModal() {
        const modal = new bootstrap.Modal(document.getElementById('updateProfileModal'));
        modal.show();
    }
</script>
</body>
</html>
<%- include("partials/footer.ejs") -%>