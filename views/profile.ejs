function copyToClipboard(elementId) {
  const element = document.getElementById(elementId);
  if (element) {
    navigator.clipboard.writeText(element.textContent.trim())
      .then(() => {
        // Show a small toast or tooltip to indicate success
        const originalText = element.textContent;
        element.textContent = "Copied!";
        setTimeout(() => {
          element.textContent = originalText;
        }, 2000);
      })
      .catch(err => {
        console.error("Failed to copy:", err);
      });
  }
}


function showManualWalletModal() {
    const modal = new bootstrap.Modal(document.getElementById('manualWalletModal'));
    modal.show();
  }

  document.getElementById('manualWalletForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const walletAddress = document.getElementById('manualWalletAddress').value.trim();

    if (!/^0x[a-fA-F0-9]{40}$/.test(walletAddress)) {
      Swal.fire('Invalid Address', 'Please enter a valid Ethereum address.', 'error');
      return;
    }

    const res = await fetch('/profile/save-wallet', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ walletAddress })
    });

    const data = await res.json();
    if (data.success) {
      Swal.fire('Success', 'Wallet saved successfully', 'success').then(() => {
        window.location.reload();
      });
    } else {
      Swal.fire('Error', 'Could not save wallet. Please try again.', 'error');
    }
  });
</script>


