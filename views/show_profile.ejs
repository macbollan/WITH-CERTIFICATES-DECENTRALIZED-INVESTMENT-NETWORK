<%- include("partials/header.ejs") -%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.username %>'s Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #007bff;
            --secondary-color: #6c757d;
            --profit-color: #0dcaf0;
            --ownership-color: #0d6efd;
            --rewards-color: #ffc107;
            --hybrid-color: #198754;
        }
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .profile-container {
            max-width: 1000px;
            margin: auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }
        .profile-header {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 2rem;
            position: relative;
        }
        .profile-img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
        .profile-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(5px);
            border-radius: 20px;
            padding: 5px 15px;
            font-weight: 600;
        }
        .section-title {
            position: relative;
            padding-bottom: 10px;
            margin-bottom: 25px;
        }
        .section-title:after {
            content: "";
            position: absolute;
            left: 0;
            bottom: 0;
            width: 60px;
            height: 4px;
            background: var(--primary-color);
            border-radius: 2px;
        }
        .card-hover {
            transition: all 0.3s ease;
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
        }
        .card-hover:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        .token-badge {
            font-size: 0.75rem;
            font-weight: 700;
            letter-spacing: 0.5px;
            padding: 0.35rem 0.7rem;
            border-radius: 50px;
            text-transform: uppercase;
        }
        .badge-profit { background-color: var(--profit-color); color: #000; }
        .badge-ownership { background-color: var(--ownership-color); color: #fff; }
        .badge-rewards { background-color: var(--rewards-color); color: #000; }
        .badge-hybrid { background-color: var(--hybrid-color); color: #fff; }
        .token-value {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--primary-color);
        }
        .progress-thin {
            height: 8px;
            border-radius: 4px;
        }
        .social-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 123, 255, 0.1);
            color: var(--primary-color);
            transition: all 0.3s;
        }
        .social-icon:hover {
            background: var(--primary-color);
            color: white;
            transform: scale(1.1);
        }
        .empty-state {
            padding: 3rem;
            text-align: center;
            background: #f9f9f9;
            border-radius: 12px;
        }
        .token-meta-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }
        .token-meta-icon {
            width: 24px;
            text-align: center;
            margin-right: 10px;
            color: var(--secondary-color);
        }
    </style>
</head>
<body>
    <div class="profile-container mb-5">
        <!-- Profile Header -->
        <div class="profile-header text-center">
            <div class="profile-badge">
                <% if(user.role === 'investor') { %>
                    <i class="bi bi-coin"></i> Investor
                <% } else { %>
                    <i class="bi bi-lightbulb"></i> Entrepreneur
                <% } %>
            </div>
            <img src="<%= user.profilePicture || '/default-avatar.png' %>" alt="Profile Picture" class="profile-img mb-3">
            <h1 class="mb-2"><%= user.username %></h1>
            <p class="lead mb-4"><%= user.bio || "Building the future of investment" %></p>
            
            <div class="d-flex justify-content-center gap-3 mb-3">
                <span class="badge bg-light text-dark">
                    <i class="bi bi-calendar me-1"></i> Joined <%= new Date(user.createdAt).toLocaleDateString() %>
                </span>
                <% if(user.location) { %>
                    <span class="badge bg-light text-dark">
                        <i class="bi bi-geo-alt me-1"></i> <%= user.location %>
                    </span>
                <% } %>
            </div>
            
            <div class="d-flex justify-content-center gap-2">
                <button class="btn btn-light rounded-pill px-4">
                    <i class="bi bi-person-plus me-1"></i> Follow
                </button>
                <% if(isLoggedIn) { %>
                    <button class="btn btn-outline-light rounded-pill px-4">
                        <i class="bi bi-envelope me-1"></i> Message
                    </button>
                <% } %>
            </div>
        </div>

        <!-- Main Content -->
        <div class="p-4 p-md-5">
            <!-- About Section -->
            <div class="row mb-5">
                <div class="col-md-6 mb-4 mb-md-0">
                    <h3 class="section-title">About</h3>
                    <div class="card card-hover h-100">
                        <div class="card-body">
                            <% if(user.skills) { %>
                                <h5 class="mb-3"><i class="bi bi-tools me-2"></i>Skills</h5>
                                <div class="d-flex flex-wrap gap-2 mb-4">
                                    <% user.skills.split(',').forEach(skill => { %>
                                        <span class="badge bg-light text-dark"><%= skill.trim() %></span>
                                    <% }); %>
                                </div>
                            <% } %>
                            
                            <% if(user.interests) { %>
                                <h5 class="mb-3"><i class="bi bi-heart me-2"></i>Interests</h5>
                                <p><%= user.interests %></p>
                            <% } %>
                            
                            <div class="mt-auto">
                                <h5 class="mb-3"><i class="bi bi-share me-2"></i>Connect</h5>
                                <div class="d-flex gap-3">
                                    <% if(user.socialLinks?.twitter) { %>
                                        <a href="<%= user.socialLinks.twitter %>" target="_blank" class="social-icon">
                                            <i class="bi bi-twitter"></i>
                                        </a>
                                    <% } %>
                                    <% if(user.socialLinks?.linkedin) { %>
                                        <a href="<%= user.socialLinks.linkedin %>" target="_blank" class="social-icon">
                                            <i class="bi bi-linkedin"></i>
                                        </a>
                                    <% } %>
                                    <% if(user.socialLinks?.github) { %>
                                        <a href="<%= user.socialLinks.github %>" target="_blank" class="social-icon">
                                            <i class="bi bi-github"></i>
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <h3 class="section-title">Contact</h3>
                    <div class="card card-hover h-100">
                        <div class="card-body">
                            <% if(isInvestor || isLoggedIn) { %>
                                <div class="token-meta-item">
                                    <div class="token-meta-icon">
                                        <i class="bi bi-envelope"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Email</small>
                                        <p class="mb-0"><%= user.email %></p>
                                    </div>
                                </div>
                                
                                <% if(user.phone) { %>
                                    <div class="token-meta-item">
                                        <div class="token-meta-icon">
                                            <i class="bi bi-telephone"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted">Phone</small>
                                            <p class="mb-0"><%= user.phone %></p>
                                        </div>
                                    </div>
                                <% } %>
                                
                                <% if(user.address) { %>
                                    <div class="token-meta-item">
                                        <div class="token-meta-icon">
                                            <i class="bi bi-geo-alt"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted">Address</small>
                                            <p class="mb-0"><%= user.address %></p>
                                        </div>
                                    </div>
                                <% } %>
                            <% } else { %>
                                <div class="empty-state py-4">
                                    <i class="bi bi-lock" style="font-size: 2rem; color: var(--secondary-color);"></i>
                                    <h5 class="mt-3">Contact Information</h5>
                                    <p class="text-muted">Available to investors and logged-in users only</p>
                                    <a href="/register" class="btn btn-primary mt-2">Join Now</a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tokens Section -->
            <div class="mb-5">
                <h3 class="section-title">Token Portfolio</h3>
                <% if (userTokens.length > 0) { %>
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        <% userTokens.forEach(token => { %>
                            <div class="col">
                                <div class="card card-hover h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <h5 class="card-title mb-0"><%= token.campaignTitle %></h5>
                                            <span class="token-badge badge-<%= token.tokenType %>">
                                                <%= token.tokenName %>
                                            </span>
                                        </div>
                                        
                                        <div class="token-value mb-2">
                                            $<%= (token.amount * (token.valuePerToken || 0)).toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                        </div>
                                        
                                        <div class="d-flex justify-content-between small text-muted mb-3">
                                            <span><%= token.amount.toLocaleString() %> tokens</span>
                                            <span>$<%= (token.valuePerToken || 0).toFixed(2) %> each</span>
                                        </div>
                                        
                                        <div class="mb-4">
                                            <% if(token.tokenType === 'profit') { %>
                                                <div class="token-meta-item">
                                                    <div class="token-meta-icon">
                                                        <i class="bi bi-percent"></i>
                                                    </div>
                                                    <div>
                                                        <small>Profit Share</small>
                                                        <p class="mb-0"><%= token.profitSharePercentage %>%</p>
                                                    </div>
                                                </div>
                                                <div class="token-meta-item">
                                                    <div class="token-meta-icon">
                                                        <i class="bi bi-calendar"></i>
                                                    </div>
                                                    <div>
                                                        <small>Distribution</small>
                                                        <p class="mb-0"><%= token.profitDistributionFrequency %></p>
                                                    </div>
                                                </div>
                                            <% } else if(token.tokenType === 'ownership') { %>
                                                <div class="token-meta-item">
                                                    <div class="token-meta-icon">
                                                        <i class="bi bi-pie-chart"></i>
                                                    </div>
                                                    <div>
                                                        <small>Ownership</small>
                                                        <p class="mb-0"><%= token.ownershipPercentage %>%</p>
                                                    </div>
                                                </div>
                                                <div class="token-meta-item">
                                                    <div class="token-meta-icon">
                                                        <i class="bi bi-check-circle"></i>
                                                    </div>
                                                    <div>
                                                        <small>Voting Rights</small>
                                                        <p class="mb-0"><%= token.votingRights ? 'Yes' : 'No' %></p>
                                                    </div>
                                                </div>
                                            <% } else if(token.tokenType === 'rewards') { %>
                                                <div class="token-meta-item">
                                                    <div class="token-meta-icon">
                                                        <i class="bi bi-gift"></i>
                                                    </div>
                                                    <div>
                                                        <small>Rewards</small>
                                                        <p class="mb-0"><%= token.rewardDescription.substring(0, 40) %><%= token.rewardDescription.length > 40 ? '...' : '' %></p>
                                                    </div>
                                                </div>
                                            <% } else if(token.tokenType === 'hybrid') { %>
                                                <div class="token-meta-item">
                                                    <div class="token-meta-icon">
                                                        <i class="bi bi-pie-chart"></i>
                                                    </div>
                                                    <div>
                                                        <small>Ownership Per Token</small>
                                                        <p class="mb-0"><%= token.ownershipPerToken %>%</p>
                                                    </div>
                                                </div>
                                                <div class="token-meta-item">
                                                    <div class="token-meta-icon">
                                                        <i class="bi bi-gift"></i>
                                                    </div>
                                                    <div>
                                                        <small>Rewards</small>
                                                        <p class="mb-0"><%= token.rewardDescription.substring(0, 30) %><%= token.rewardDescription.length > 30 ? '...' : '' %></p>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </div>
                                        
                                        <a href="/campaigns/<%= token.campaignId %>" class="btn btn-outline-primary w-100 mt-auto">
                                            View Campaign
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="bi bi-wallet2" style="font-size: 2rem; color: var(--secondary-color);"></i>
                        <h4 class="mt-3">No Tokens Yet</h4>
                        <p class="text-muted"><%= user.username %> hasn't acquired any tokens yet</p>
                    </div>
                <% } %>
            </div>

            <!-- Campaigns Section -->
            <div class="mb-5">
                <h3 class="section-title">Created Campaigns</h3>
                <% if (campaigns && campaigns.length > 0) { %>
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        <% campaigns.forEach(campaign => { %>
                            <div class="col">
                                <div class="card card-hover h-100">
                                    <% if(campaign.image) { %>
                                        <img src="<%= campaign.image %>" class="card-img-top" alt="<%= campaign.title %>" style="height: 150px; object-fit: cover;">
                                    <% } else { %>
                                        <div class="card-img-top bg-primary text-white d-flex align-items-center justify-content-center" style="height: 150px;">
                                            <h3 class="mb-0"><%= campaign.tokenSymbol || 'TKN' %></h3>
                                        </div>
                                    <% } %>
                                    
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title mb-0"><%= campaign.title %></h5>
                                            <span class="badge bg-<%= campaign.status === 'active' ? 'success' : campaign.status === 'funded' ? 'primary' : 'secondary' %>">
                                                <%= campaign.status %>
                                            </span>
                                        </div>
                                        
                                        <p class="text-muted small mb-3"><%= new Date(campaign.timeCreated).toLocaleDateString() %></p>
                                        
                                        <div class="progress progress-thin mb-3">
                                            <div class="progress-bar" 
                                                style="width: <%= Math.min((campaign.amountRaised / campaign.goalAmount) * 100, 100) %>%">
                                            </div>
                                        </div>
                                        
                                        <div class="d-flex justify-content-between small text-muted mb-4">
                                            <span>$<%= campaign.amountRaised.toLocaleString() %></span>
                                            <span>$<%= campaign.goalAmount.toLocaleString() %></span>
                                        </div>
                                        
                                        <div class="d-flex justify-content-between small mb-3">
                                            <span><i class="bi bi-people"></i> <%= campaign.investors.length %> investors</span>
                                            <span><i class="bi bi-coin"></i> <%= campaign.tokenSymbol %></span>
                                        </div>
                                        
                                        <a href="/campaigns/<%= campaign._id %>" class="btn btn-outline-primary w-100 mt-2">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="bi bi-lightbulb" style="font-size: 2rem; color: var(--secondary-color);"></i>
                        <h4 class="mt-3">No Campaigns Yet</h4>
                        <p class="text-muted"><%= user.username %> hasn't created any campaigns yet</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Enable tooltips
        document.addEventListener('DOMContentLoaded', function() {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
</body>
</html>
<%- include("partials/footer.ejs") -%>